---
const studies = [
  {
    title: "Máster FP en Inteligencia Artificial y Big Data",
    institution: "iFP - Centro de Formación Profesional",
    period: "Actualmente",
    description:
      "Especialización avanzada en inteligencia artificial y análisis de big data. Desarrollo de modelos de machine learning, procesamiento de grandes volúmenes de datos y implementación de soluciones de IA para resolver problemas complejos del mundo real.",
    subjects: [
      "Machine Learning",
      "Deep Learning",
      "Python",
      "IA y Big Data",
    ],
  },
  {
    title: "Máster FP en Python",
    institution: "CIFP Elorrieta-Erreka Mari LHII",
    period: "Actualmente",
    description:
      "Formación especializada en desarrollo de aplicaciones con Python, utilizando las mejores prácticas y herramientas del ecosistema Python.",
    subjects: [
      "Python"
    ],
  },
  {
    title: "Grado Superior en Desarrollo de Aplicaciones Multiplataforma (DAM)",
    institution: "CIFP Elorrieta-Erreka Mari LHII",
    period: "2023 - 2025",
    description:
      "Formación integral en desarrollo de aplicaciones para diferentes plataformas. Aprendizaje de múltiples lenguajes de programación, bases de datos, desarrollo web y móvil. Proyecto final centrado en una aplicación completa con frontend y backend.",
    subjects: [
      "Java",
      "Android",
      "TypeScript",
      "Node.js",
      "Angular",
      "SQL",
      "Git",
      "GitHub",
    ],
  },
  {
    title:
      "Grado Superior en Administración de Sistemas Informáticos en Red (ASIR)",
    institution: "CIFP Elorrieta-Erreka Mari LHII",
    period: "2021 - 2023",
    description:
      "Especialización en administración y mantenimiento de sistemas informáticos y redes. Gestión de servidores Windows y Linux, configuración de redes, seguridad informática y administración de bases de datos.",
    subjects: [
      "Windows Server",
      "Linux",
      "Active Directory",
      "Redes",
      "PowerShell",
      "JavaScript",
      "Seguridad informática",
      "Virtualización",
    ],
  },
];
---

<section
  id="studies"
  class="py-20 transition-colors duration-300 bg-gray-50 dark:bg-gray-800"
>
  <div class="container px-4 mx-auto">
    <div class="mb-16 text-center" data-aos="fade-up">
      <h2 class="mb-4 text-3xl font-bold md:text-4xl">Formación</h2>
      <div class="w-20 h-1 mx-auto rounded-full gradient-bg"></div>
      <p
        class="max-w-2xl mx-auto mt-4 text-gray-600 transition-colors duration-300 dark:text-gray-400"
      >
        Aquí muestro mi trayectoria educativa en el ámbito tecnológico.
      </p>
    </div>

    <div class="max-w-4xl mx-auto">
      <div class="relative pl-8 ml-4 border-l-4 border-primary">
        {
          studies.map((study, index) => (
            <div
              class="relative mb-12"
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
              <div class="absolute flex items-center justify-center w-8 h-8 rounded-full -left-12 gradient-bg">
                <div class="w-3 h-3 bg-white rounded-full" />
              </div>

              <div class="p-6 transition-colors duration-300 rounded-lg shadow-md bg-white dark:bg-gray-900">
                <div class="mb-3">
                  <h3 class="text-xl font-semibold transition-colors duration-300 dark:text-white mb-2">
                    {study.title}
                  </h3>
                  <span class="px-3 py-1 text-sm rounded-full bg-primary/10 text-primary dark:text-secondary dark:bg-secondary/10 flex items-center gap-2 w-fit">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      class="w-4 h-4"
                    >
                      <path d="M11.7 2.805a.75.75 0 01.6 0A60.65 60.65 0 0122.83 8.72a.75.75 0 01-.231 1.337 49.949 49.949 0 00-9.902 3.912l-.003.002-.34.18a.75.75 0 01-.707 0A50.009 50.009 0 007.5 12.174v-.224c0-.131.067-.248.172-.311a54.614 54.614 0 014.653-2.52.75.75 0 00-.65-1.352 56.129 56.129 0 00-4.78 2.589 1.858 1.858 0 00-.859 1.228 49.803 49.803 0 00-4.634-1.527.75.75 0 01-.231-1.337A60.653 60.653 0 0111.7 2.805z" />
                      <path d="M13.06 15.473a48.45 48.45 0 017.666-3.282c.134 1.414.22 2.843.255 4.285a.75.75 0 01-.46.71 47.878 47.878 0 00-8.105 4.342.75.75 0 01-.832 0 47.877 47.877 0 00-8.104-4.342.75.75 0 01-.461-.71c.035-1.442.121-2.87.255-4.286A48.4 48.4 0 016 13.18v1.27a1.5 1.5 0 00-.14 2.508c-.09.38-.222.753-.397 1.11.452.213.901.434 1.346.661a6.729 6.729 0 00.551-1.608 1.5 1.5 0 00.14-2.67v-.645a48.549 48.549 0 713.44 1.668 2.25 2.25 0 002.12 0z" />
                      <path d="M4.462 19.462c.42-.419.753-.89 1-1.394.453.213.902.434 1.347.661a6.743 6.743 0 01-1.286 1.794.75.75 0 11-1.061-1.061z" />
                    </svg>
                    <span>{study.period}</span>
                  </span>
                </div>

                <div class="mb-3">
                  <p class="text-lg font-medium text-primary dark:text-secondary">
                    {study.institution}
                  </p>
                </div>

                <p class="mb-4 text-gray-600 transition-colors duration-300 dark:text-gray-400">
                  {study.description}
                </p>

                <div>
                  <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                    Materias principales:
                  </h4>
                  <div class="flex flex-wrap gap-2">
                    {study.subjects.map((subject) => (
                      <span
                        class="px-3 py-1 text-sm text-gray-700 transition-colors duration-300 bg-gray-100 rounded-full dark:bg-gray-700 select-none dark:text-gray-300
                                           dark:hover:bg-gray-600 hover:bg-gray-200"
                      >
                        {subject}
                      </span>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

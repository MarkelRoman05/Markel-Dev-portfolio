---
import { Image } from "astro:assets";
import logoImg from "../assets/images/MarkelDev-logo.png";

title: "Encabezado";
---

<header>
  <div class="logo-container">
    <a href="/" title="Volver a la página de inicio">
        <Image height={80} src={logoImg} alt="Logo de la página" loading={"eager"} />
    </a>
  </div>
  <nav>
    <ul>
      <li><a href="/">Inicio</a></li>
      <li><a href="/about">Sobre mí</a></li>
      <li><a href="/projects">Proyectos</a></li>
      <li><a href="/contact">Contacto</a></li>
    </ul>
  </nav>
</header>
<slot />

<style>
  header { 
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2.2rem;
    background-color: #0a0a0a;
    color: white;
    box-shadow: 0 1px 1px rgba(255, 255, 255, 0.1);
  }

  .logo-container {
    display: flex;
    align-items: center;
  }

  .logo-container img {
    height: 80px;
  }

  .logo-container img:hover {
    transform: rotate(360deg);
    transition: transform 0.5s ease;
  }

  h1 {
    font-size: 1.5rem;
    margin: 0;
    color: white;
  }

  nav ul {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  nav ul li {
    position: relative;
  }

  nav ul li a {
    color: white;
    font-family: "Roboto", serif;
    font-weight: bold;
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.3s ease;
  }

  nav ul li a:hover {
    color: #ff6347;
  }

  nav ul li a:hover::after {
    width: 100%;
  }
</style>

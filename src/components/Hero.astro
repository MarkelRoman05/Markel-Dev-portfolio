---
import { Tooltips } from "astro-tooltips";
---

<section
  id="home"
  class="relative flex items-center min-h-screen pt-16 overflow-hidden"
>
  <div class="absolute inset-0 -z-10">
    <div
      class="absolute inset-0 transition-colors duration-300 bg-gradient-to-br from-blue-50 to-purple-50 dark:from-blue-950 dark:to-purple-950 opacity-70"
    >
    </div>
    <div
      class="absolute w-1/2 transition-colors duration-300 bg-blue-200 rounded-full top-1/4 -left-1/4 h-1/2 dark:bg-blue-800 blur-3xl opacity-20"
    >
    </div>
    <div
      class="absolute w-1/2 transition-colors duration-300 bg-purple-200 rounded-full bottom-1/4 -right-1/4 h-1/2 dark:bg-purple-800 blur-3xl opacity-20"
    >
    </div>
  </div>

  <div class="container px-4 py-16 mx-auto">
    <div class="flex flex-col items-center md:flex-row">
      <div
        class="mb-10 md:w-1/2 md:mb-0"
        data-aos="fade-right"
        data-aos-anchor-placement="top-center"
      >
        <p class="mb-2 font-medium text-primary">Bienvenido al Portfolio de</p>
        <h1 class="mb-4 text-4xl font-bold md:text-5xl lg:text-6xl">
          <span class="gradient-text">Markel Román González</span>
        </h1>
        <h2
          class="mb-6 text-2xl font-semibold text-gray-700 transition-colors duration-300 md:text-3xl dark:text-gray-300"
        >
          <span>Desarrollador y Administrador de Sistemas</span>
        </h2>
        <div class="flex flex-wrap gap-4">
          <div class="flex items-start gap-4">
            <div class="p-3 dark:text-white rounded-lg">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6 transition hover:scale-110"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
                ></path>
              </svg>
            </div>
            <div>
              <h4
                class="text-lg font-semibold transition-colors duration-300 dark:text-white"
              >
                <span>E-mail</span>
              </h4>
              <p
                class="text-gray-600 transition-colors duration-300 dark:text-gray-400"
              >
                <span
                  onclick="navigator.clipboard.writeText('markromagonz@gmail.com');"
                  class="cursor-pointer"
                  title="Haz clic para copiar"
                  data-tooltip-placement="bottom"
                >
                  markromagonz@gmail.com
                </span>
              </p>
            </div>
          </div>
        </div>
      </div>

      <div
        class="flex justify-center md:w-1/2"
        data-aos="fade-left"
        data-aos-anchor-placement="top-center"
      >
        <div class="relative w-48 h-48 sm:w-64 sm:h-64 md:w-80 md:h-80">
          <div
            class="absolute inset-0 rounded-full bg-gradient-to-br from-primary to-secondary opacity-10 blur-xl"
          >
          </div>
          <div
            class="absolute rounded-full inset-4 bg-gradient-to-br from-primary/20 to-secondary/20"
          >
          </div>
          <div
            class="absolute overflow-hidden transition-colors duration-300 border-4 border-white rounded-full shadow-xl inset-8 dark:border-gray-800"
          >
            <img
              src="Markel_image.jpeg"
              alt="Markel"
              class="object-cover w-full h-full"
            />
          </div>
        </div>
      </div>
    </div>

    <div
      class="flex items-center justify-center mt-16 border border-gray-500 dark:border-gray-400 rounded-full shadow-lg w-fit p-4 mx-auto"
      data-aos="fade-up"
      data-aos-delay="100"
      data-aos-anchor-placement="center-bottom"
    >
      <div class="flex items-center justify-center gap-7">
        <a
          href="https://github.com/MarkelRoman05"
          target="_blank"
          title="GitHub"
          data-tooltip-placement="bottom"
          rel="noopener noreferrer"
          class="text-gray-600 transition-colors duration-300 dark:text-gray-400 hover:text-primary dark:hover:text-secondary"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            ></path>
          </svg>
        </a>
        <a
          href="https://www.linkedin.com/in/markel-rom%C3%A1n-gonz%C3%A1lez/"
          target="_blank"
          title="LinkedIn"
          data-tooltip-placement="bottom"
          rel="noopener noreferrer"
          class="text-gray-600 transition-colors duration-300 dark:hover:text-secondary dark:text-gray-400 hover:text-primary"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path
              d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
            ></path>
          </svg>
        </a>
        <a
          href="https://linktr.ee/markel05"
          target="_blank"
          rel="noopener noreferrer"
          title="Más enlaces"
          data-tooltip-placement="bottom"
          class="text-primary dark:text-secondary transition-transform duration-300 hover:scale-125"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="28"
            height="28"
            fill="currentColor"
            viewBox="0 0 24 24"
            class="transition-transform duration-300"
          >
            <path
              d="M12 7a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H8a1 1 0 110-2h3V8a1 1 0 011-1z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
    <div
      class="mt-7 flex justify-center items-center"
      data-aos="fade-up"
      data-aos-delay="100"
      data-aos-anchor-placement="center-bottom"
    >
      <a href="#about" class="animate-bounce flex items-center justify-center">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-10 h-10 text-gray-600 dark:text-gray-400"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M19.5 12.75l-7.5 7.5-7.5-7.5"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
